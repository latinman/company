<div class="jumbotron text-center">
  <h1 class="title">Welcome to tinito</h1>
  <h3 class="text-center">where you can <u>only</u> find the cheapest prices online...</h3>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <% if current_user %>
          <%= link_to "Finalize Profile", edit_user_registration_path %>
      <% else %>
        <h2 class="text-center"><span style="color: #e67e22">Membership</span></h2>
        <h5>Pay <span class="plan-price">$79.95</span>/year and receive the best prices you can't find.</h5>
        <%= link_to '<i class="fa fa-pencil-square-o"></i> Sign Up Today'.html_safe, new_user_registration_path, class: "btn btn-success btn-lg btn-block" %>
      <% end %>
    </div>
  </div>
</div>