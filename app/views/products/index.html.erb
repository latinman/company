<div class="row">
  <h2>Products</h2>
  <div class="col-md-3 products-page">
        <ul>
          <% @products.each do |product| %>
              <h4 class="text-center"><%= product.name %></h4>
              <li><%= product.description %></li>
              <li><%= link_to product_path(:id) do %>
                <%= image_tag product.image.url(:medium) %></li>
                    <% end %>
              <strong><li>Member price: <span class="price"><%= number_to_currency product.price %></span></li></strong>
              <h3 class="text-center"><%= link_to "Add to Cart", "#" %> <i class="ion-ios-cart"></i></h3>
          <% end %>
        </ul>
  </div>
</div>