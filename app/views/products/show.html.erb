<div class="row">
  <div class="col-md-6">
    <ul>
      <li><%= @product.name %></li>
      <li><%= image_tag @product.image.url(:large) %></li>
    </ul>
  </div>
  <div class="col-md-6">
    <h3>Description</h3>
    <%= @product.description %><br />
    <span class="price"><%= number_to_currency @product.price %></span> <%= button_to "Add to Cart", "#" %>
  </div>
</div>
